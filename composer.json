{
    "name": "chadicus/psr-log-mongodb",
    "description": "A concrete implementation of the PSR LoggerInterface using mongo",
    "keywords": ["psr", "log", "mongo"],
    "authors": [
        {
            "name": "Chad Gray",
            "email": "chadwickgray@gmail.com",
            "homepage": "http://chadicus.org",
            "role": "Developer"
        }
    ],
    "license": "MIT",
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": "^7.0",
        "chadicus/psr-log-helper": "^1.2",
        "chadicus/util-exceptions": ">=2.0",
        "mongodb/mongodb": "^1.0",
        "psr/log": "^1.0"
    },
    "require-dev": {
        "php-coveralls/php-coveralls": "^2.1",
        "phpunit/phpunit": "^5.5",
        "squizlabs/php_codesniffer": "^3.3"
    },
    "autoload": {
        "psr-4": { "Chadicus\\Psr\\Log\\": "src" }
    },
    "autoload-dev": {
        "psr-4": { "ChadicusTest\\Psr\\Log\\": "tests" }
    }
}
